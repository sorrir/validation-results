	"version": "0.2.0",
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "Debug simple-testbed",
			"program": "${workspaceFolder}/simple-testbed/source/app-executor.ts",
			// "args": [
			//	"--to-execute",
			// 	"b"
			// ],
			"env": {
				"C_PORT": "8888",
				"C_HOST": "tester",
			},
			"preLaunchTask": "tsc: build - tsconfig.json",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		}
	]
}